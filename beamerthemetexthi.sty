}
\setbeamertemplate{sidebar canvas left}{
	\begin{picture}(0,0)
		\put(0,-255){%
			\pgfuseimage{SlideLeftStripe}
		}
    \end{picture}
}

% =====	
% Title
% =====
\setbeamertemplate{frametitle}{
	\color{THIblue}
	\vspace*{4mm}\hspace*{-2mm}\textit{\insertframetitle}\newline
	\vspace*{-20mm}\hspace*{-2mm}\textit{\normalsize{\insertframesubtitle}}
	\vspace*{18mm}
}

% ===
% TOC
% ===
\setbeamertemplate{section in toc}[rectangle]

% ========
% Footline
% ========
\newcommand{\Ffootline}{%
  	\color{THIblue} \textit{\insertsection} % The left end of the footline
  \hfill
	\textit{\insertauthor} % The center
  \hfill
  	\insertframenumber/\inserttotalframenumber} % And the right end

\setbeamertemplate{footline}{%
  \usebeamerfont{structure}
  	\begin{beamercolorbox}[wd=\paperwidth,ht=2.25ex,dp=1ex]{title in head/foot}%
    	\Tiny\hspace*{4mm} \Ffootline \hspace{4mm}
  	\end{beamercolorbox}}
  	
% disable navigation symbols
\setbeamertemplate{navigation symbols}{}

